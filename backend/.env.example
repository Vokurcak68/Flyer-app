# Example Environment Configuration for Backend
# Copy this file to .env and .env.production and fill in your values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Development Database
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/flyer_app?schema=public"

# Production Database (use different database name and credentials)
# DATABASE_URL="postgresql://flyer_app_user:strong_password@localhost:5432/flyer_app_production?schema=public"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=4000
NODE_ENV=development  # or 'production'

# Frontend URL for CORS
# Development: http://localhost:3000
# Production: https://eflyer.kuchyneoresi.eu
FRONTEND_URL=http://localhost:3000

# ========================================
# SECURITY
# ========================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# ========================================
# ERP INTEGRATION (MSSQL)
# ========================================
ERP_DB_SERVER=your_server\\sqlexpress
ERP_DB_NAME=YourDatabase
ERP_DB_USER=your_user
ERP_DB_PASSWORD=your_password
ERP_DB_ENCRYPT=false

# ========================================
# PRODUCT VALIDATION
# ========================================
# If true, EAN codes must be unique across active products
# If false, multiple products can have the same EAN code
ENFORCE_UNIQUE_EAN=true
