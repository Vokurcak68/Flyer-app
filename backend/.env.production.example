# Production Environment Configuration for Backend
# Copy this to C:\inetpub\flyer-app\backend\.env on production server

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL="postgresql://flyer_app_user:YOUR_STRONG_PASSWORD@localhost:5432/flyer_app_production?schema=public"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=4000
NODE_ENV=production

# Frontend URL for CORS - IMPORTANT: Must match your production domain
FRONTEND_URL=https://eflyer.kuchyneoresi.eu

# ========================================
# SECURITY
# ========================================
# IMPORTANT: Use a strong, unique secret in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

_EXPIRATION=7d

# ========================================
# ERP INTEGRATION (MSSQL)
# ========================================
ERP_DB_SERVER=192.168.0.131\\sqlexpress
ERP_DB_NAME=Helios002
ERP_DB_USER=vokurka
ERP_DB_PASSWORD=YOUR_ERP_PASSWORD
ERP_DB_ENCRYPT=false

# ========================================
# PRODUCT VALIDATION
# ========================================
ENFORCE_UNIQUE_EAN=true
